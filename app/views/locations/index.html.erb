<h1>Ubicaciones</h1>

<table>
  <thead>
    <tr>
      <th>Pasillo</th>
      <th>Slot</th>
      <th>Nivel</th>
      <th>Disponible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.passage.name %></td>
        <td><%= location.slot.number %></td>
        <td><%= location.level.number %></td>
        <td><%= location.available %></td>
        <!--<td><%= link_to 'Show', location %></td>-->
        <!--<td><%= link_to 'Edit', edit_location_path(location) %></td>-->
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

