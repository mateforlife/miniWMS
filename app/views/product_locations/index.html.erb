<p id="notice"><%= notice %></p>

<h1>Product Locations</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_locations.each do |product_location| %>
      <tr>
        <td><%= product_location.product.code_description %></td>
        <td><%= product_location.location.location_full_name %></td>
        <td><%= link_to 'Show', product_location %></td>
        <td><%= link_to 'Edit', edit_product_location_path(product_location) %></td>
        <td><%= link_to 'Destroy', product_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

